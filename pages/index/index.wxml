<!--index.wxml-->
<view class="login-container">
  <!-- 状态栏 -->
  <view class="status-bar">
    <view class="status-left">
      <text class="signal-icon">📶</text>
      <text>中国移动</text>
    </view>
    <view class="status-center">{{currentTime}}</view>
    <view class="status-right">
      <text class="battery-icon">🔋</text>
      <text>100%</text>
    </view>
  </view>
  
  <view class="login-content">
    <!-- 应用图标和名称 -->
    <view class="app-logo">💰</view>
    <view class="app-name">易易分账</view>

    <!-- 登录按钮 -->
    <button class="login-btn" bindtap="simpleLogin">
      <text>微信一键登录</text>
    </button>

    <!-- 手机号登录按钮 -->
    <button class="phone-login-btn" bindtap="navigateToPhoneLogin">
      <text>手机号登录/注册</text>
    </button>
  </view>

  <!-- 隐私协议文本 -->
  <view class="privacy-text">
    登录即代表您已同意《用户协议》和《隐私政策》
  </view>
</view>
