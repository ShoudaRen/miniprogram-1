/**index.wxss**/
page {
  height: 100vh;
  background-color: #f6f6f6;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
}

/* 状态栏样式 */
.status-bar {
  background-color: #fff;
  padding: 5px 15px;
  display: flex;
  justify-content: space-between;
  align-items: center;
  height: 25px;
  font-size: 12px;
}

.status-left, .status-right {
  display: flex;
  align-items: center;
}

.signal-icon, .battery-icon {
  margin-right: 5px;
}

.login-container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 0 30px 30px;
  box-sizing: border-box;
}

.login-content {
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-top: 50px;
}

.app-logo {
  width: 100px;
  height: 100px;
  border-radius: 20px;
  background-color: #07c160;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 20px;
  color: white;
  font-size: 50px;
}

.app-name {
  font-size: 24px;
  font-weight: bold;
  color: #333;
  margin-bottom: 40px;
}

.login-btn {
  background-color: #07c160;
  color: white;
  width: 100%;
  padding: 12px;
  border-radius: 8px;
  text-align: center;
  font-size: 16px;
  font-weight: 500;
  margin-top: 20px;
  display: flex;
  align-items: center;
  justify-content: center;
  border: none;
}

.login-btn::after {
  border: none;
}

.phone-login-btn {
  background-color: white;
  color: #07c160;
  border: 1px solid #07c160;
  width: 100%;
  padding: 12px;
  border-radius: 8px;
  text-align: center;
  font-size: 16px;
  font-weight: 500;
  margin-top: 15px;
  display: flex;
  align-items: center;
  justify-content: center;
}

.phone-login-btn::after {
  border: none;
}

.privacy-text {
  font-size: 12px;
  color: #999;
  text-align: center;
  padding: 0 20px;
  line-height: 1.5;
  box-sizing: border-box;
  margin-bottom: 20px;
}

.scrollarea {
  flex: 1;
  overflow-y: hidden;
}

.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
  color: #aaa;
  width: 80%;
}

.userinfo-avatar {
  overflow: hidden;
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.usermotto {
  margin-top: 200px;
}

.avatar-wrapper {
  padding: 0;
  width: 56px !important;
  border-radius: 8px;
  margin-top: 40px;
  margin-bottom: 40px;
}

.avatar {
  display: block;
  width: 56px;
  height: 56px;
}

.nickname-wrapper {
  display: flex;
  width: 100%;
  padding: 16px;
  box-sizing: border-box;
  border-top: .5px solid rgba(0, 0, 0, 0.1);
  border-bottom: .5px solid rgba(0, 0, 0, 0.1);
  color: black;
}

.nickname-label {
  width: 105px;
}

.nickname-input {
  flex: 1;
}
